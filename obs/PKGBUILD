# Maintainer: marazmista <marazmista@gmail.com>

pkgname=radeon-profile-daemon
pkgver=1
pkgrel=$(uname --machine)
pkgdesc="Systemd service for radeon-profile"
url="http://github.com/marazmista/radeon-profile-daemon"
arch=('i686' 'x86_64')
license=('GPL2')
makedepends=('qt5-base' 'qtchooser' 'make' 'xf86-video-ati' 'radeon-profile')
provides=('radeon-profile-daemon')
replaces=('radeon-profile-daemon')
source=(radeon-profile-daemon-${pkgver}.tar.gz)
sha256sums=('SKIP')
 
build() {
	mkdir -p build
	cd build
	qmake ../radeon-profile-daemon-$pkgver/radeon-profile-daemon/
	make
}
 
package() {
	cd build/
	make prefix="${pkgdir}" install
	install -Dm755 "$srcdir/build/radeon-profile-daemon" "$pkgdir/usr/bin/radeon-profile-daemon"
	install -Dm644 "$srcdir/radeon-profile-daemon-$pkgver/radeon-profile-daemon/extra/radeon-profile-daemon.service" "$pkgdir/usr/lib/systemd/system/radeon-profile-daemon.service"
}
